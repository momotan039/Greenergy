{
  "name": "greenergy-theme",
  "version": "1.0.0",
  "description": "Enterprise Hybrid WordPress Theme for Greenergy Media Platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\" \"npm run dev:blocks\" \"npm run dev:admin-js\"",
    "dev:css": "npx tailwindcss -i ./assets/css/src/main.css -o ./assets/css/dist/main.min.css --watch",
    "dev:js": "npx esbuild assets/js/src/main.js --bundle --outfile=assets/js/dist/main.min.js --watch",
    "dev:blocks": "npx esbuild assets/js/src/blocks.js --bundle --outfile=assets/js/dist/blocks.min.js --watch",
    "dev:admin-js": "npx esbuild assets/js/src/admin-panel.js --bundle --outfile=assets/js/dist/admin-panel.js --external:@wordpress/* --external:react --external:react-dom --loader:.js=jsx --jsx-factory=wp.element.createElement --jsx-fragment=wp.element.Fragment --watch",
    "build": "npm run build:css && npm run build:js && npm run build:blocks && npm run build:admin-js",
    "build:css": "npx tailwindcss -i ./assets/css/src/main.css -o ./assets/css/dist/main.min.css --minify",
    "build:rtl": "npx rtlcss ./assets/css/dist/main.min.css ./assets/css/dist/main-rtl.min.css",
    "build:editor": "npx tailwindcss -i ./assets/css/src/editor.css -o ./assets/css/dist/editor.min.css --minify",
    "build:critical": "node scripts/extract-critical.js",
    "build:js": "npx esbuild assets/js/src/main.js --bundle --minify --outfile=assets/js/dist/main.min.js",
    "build:blocks": "npx esbuild assets/js/src/blocks.js --bundle --minify --outfile=assets/js/dist/blocks.min.js --external:@wordpress/* --external:react --external:react-dom --loader:.js=jsx --jsx-factory=wp.element.createElement --jsx-fragment=wp.element.Fragment",
    "build:admin-js": "npx esbuild assets/js/src/admin-panel.js --bundle --minify --outfile=assets/js/dist/admin-panel.js --external:@wordpress/* --external:react --external:react-dom --loader:.js=jsx --jsx-factory=wp.element.createElement --jsx-fragment=wp.element.Fragment",
    "build:admin-css": "npx tailwindcss -i ./assets/css/src/admin.css -o ./assets/css/admin.css --minify",
    "build:all": "npm run build:css && npm run build:rtl && npm run build:editor && npm run build:js && npm run build:blocks && npm run build:admin-js && npm run build:admin-css",
    "lint:css": "npx stylelint \"assets/css/src/**/*.css\"",
    "lint:js": "npx eslint \"assets/js/src/**/*.js\""
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "rtlcss": "^4.1.1",
    "stylelint": "^16.0.2",
    "tailwindcss": "^3.4.0",
    "tailwindcss-rtl": "^0.9.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}