{
    "name": "greenergy/all-posts",
    "title": "جميع المقالات",
    "category": "greenergy-blocks",
    "icon": "dashicons-admin-post",
    "apiVersion": 3,
    "editorScript": "greenergy-blocks-editor",
    "render": "file:./render.php",
    "attributes": {
        "title": {
            "type": "string",
            "default": "جميع المقالات"
        },
        "subtitle": {
            "type": "string",
            "default": "تصفح مجموعة كبيرة من المقالات التعليمية"
        },
        "showCategoryBar": {
            "type": "boolean",
            "default": true
        },
        "postsPerPage": {
            "type": "number",
            "default": 12
        },
        "featuredTitle": {
            "type": "string",
            "default": "المقالات المميزة"
        },
        "featuredSubtitle": {
            "type": "string",
            "default": "أبرز المقالات التعليمية في مجال الطاقة والاستدامة"
        },
        "featuredSelectionMode": {
            "type": "string",
            "default": "dynamic"
        },
        "featuredOrderBy": {
            "type": "string",
            "default": "latest"
        },
        "featuredIsEnabled": {
            "type": "boolean",
            "default": true
        },
        "featuredCount": {
            "type": "number",
            "default": 4
        },
        "featuredSelectedPosts": {
            "type": "array",
            "default": []
        },
        "selectedCategories": {
            "type": "array",
            "default": []
        },
        "coursesLabel": {
            "type": "string",
            "default": "التدريبات"
        },
        "coursesUrl": {
            "type": "string",
            "default": ""
        },
        "articlesLabel": {
            "type": "string",
            "default": "المقالات التعليمية"
        },
        "articlesUrl": {
            "type": "string",
            "default": ""
        }
    }
}