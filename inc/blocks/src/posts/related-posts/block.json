{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "greenergy/related-posts",
    "title": "المقالات ذات الصلة",
    "category": "greenergy-blocks",
    "icon": "admin-post",
    "editorScript": "greenergy-blocks-editor",
    "description": "يعرض مقالات ذات صلة بالمقال الحالي بناءً على التصنيفات والوسوم أو باختيار يدوي.",
    "attributes": {
        "title": {
            "type": "string",
            "default": "مقالات ذات صلة"
        },
        "subtitle": {
            "type": "string",
            "default": "اكتشف مقالات أخرى مرتبطة بنفس الموضوع."
        },
        "selectionMode": {
            "type": "string",
            "default": "auto"
        },
        "relatedCount": {
            "type": "number",
            "default": 8
        },
        "relatedSelectedPosts": {
            "type": "array",
            "default": []
        },
        "isEnabled": {
            "type": "boolean",
            "default": true
        }
    },
    "render": "file:./render.php"
}
