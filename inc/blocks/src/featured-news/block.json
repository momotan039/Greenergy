{
    "apiVersion": 3,
    "name": "greenergy/featured-news",
    "title": "أخبار مميزة",
    "category": "greenergy-blocks",
    "icon": "cover-image",
    "description": "Displays the latest or selected news post in a large card.",
    "keywords": [
        "news",
        "featured",
        "hero"
    ],
    "supports": {
        "html": false,
        "align": [
            "wide",
            "full"
        ]
    },
    "attributes": {
        "count": {
            "type": "number",
            "default": 1
        },
        "selectionMode": {
            "type": "string",
            "default": "dynamic"
        },
        "selectedPosts": {
            "type": "array",
            "default": []
        },
        "queryCategories": {
            "type": "array",
            "default": []
        },
        "orderBy": {
            "type": "string",
            "default": "latest"
        }
    },
    "editorScript": "greenergy-blocks-editor",
    "render": "file:./render.php"
}